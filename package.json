{
  "name": "Emmmails",
  "version": "1.0.0",
  "description": "Email html generation service.",
  "scripts": {
    "dev": "nodemon src/index.js --exec babel-node --inspect --presets es2015,stage-2 --ignore logs/ -e js,hbs,json",
    "babelnode": "babel-node --inspect src/index.js",
    "buildserver": "babel src -d dist",
    "start": "export NODE_ENV=production && node dist/index.js",
    "sass": "node-sass src/assets/scss/app.scss src/assets/compiled.css"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "cheerio": "^1.0.0-rc.2",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "foundation-emails": "^2.2.1",
    "foundation-emails-template": "^1.0.0",
    "handlebars": "^4.0.12",
    "handlebars-helpers": "^0.10.0",
    "inline-css": "^2.4.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.11.0",
    "nodemailer": "^4.6.8",
    "nodemon": "^1.18.4",
    "pug": "^2.0.3",
    "showdown": "^1.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "beepbeep": "^1.2.0",
    "browser-sync": "^2.24.7",
    "colors": "^1.1.2",
    "inky": "^1.3.6",
    "lazypipe": "^1.0.1",
    "merge-stream": "^1.0.0",
    "panini": "^1.3.0",
    "rimraf": "^2.3.3",
    "siphon-media-query": "^1.0.0",
    "yargs": "^4.1.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
